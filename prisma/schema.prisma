generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int        @id @default(autoincrement())
  email    String     @unique
  name     String?
  credits  Int        @default(2)
  projects Project[]
  chats    ChatMessage[]
}

model Project {
  id        Int        @id @default(autoincrement())
  projectId String
  user      User       @relation(fields: [userId], references: [id])
  userId    Int
  frames    Frame[]
  createdAt DateTime   @default(now())
}

model Frame {
  id        Int      @id @default(autoincrement())
  frameId   String
  project   Project  @relation(fields: [projectId], references: [id])
  projectId Int
}

model ChatMessage {
  id        Int      @id @default(autoincrement())
  chatMessage Json
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  createdAt DateTime @default(now())
}
